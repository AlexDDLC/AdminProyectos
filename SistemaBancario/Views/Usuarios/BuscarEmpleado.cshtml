@model SistemaBancario.Models.ListadoUsuarios
@{
    ViewData["Title"] = "BuscarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <partial name="_MenuLateral" />
    <div id="content">



        <!-- top-bar -->
        <nav class="navbar dnavbar navbar-default mb-xl-5 mb-4">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" id="sidebarCollapse" class="btn btn-info navbar-btn">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
                <form action="BuscarEmpleado" method="post" class="form-inline mx-auto search-form">

                    <!-- Search-from -->
                    <div class="form-row">
                        <div class="form-group m-1">
                            <label>Buscar empleado por</label>
                        </div>
                        <div class="form-group m-1">
                            <input type="text" class="form-control" name="cedula" placeholder="Cedula" required="">
                        </div>
                        <div class="form-group m-1">
                            <button type="submit" class="btn btn-warning">Buscar</button>
                        </div>


                    </div>
                </form>
                <div class="form-group m-1">
                    <button class="btn btn-primary"><a asp-controller="Usuarios" asp-action="ListadoEmpleados">Volver a listado</a></button>
                </div>
                <!--// Search-from -->
            </div>
        </nav>
        <!--// top-bar -->

        <script>
            $(document).ready(function () {
                $('#sidebarCollapse').on('click', function () {
                    $('#sidebar').toggleClass('active');
                });
            });
        </script>


        <!-- table4 -->
        <div class="outer-w3-agile mt-3">
            <h4 class="tittle-w3-agileits mb-4">Listado de empleados</h4>
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Cedula</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Salario</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Cargo Empleado</th>
                        <th scope="col">Estatus</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.idEmpleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.cedulaEmpleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.nombreEmpleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.apellidoEmpleado)
                        </td>
                        <td>
                            RD$@Html.DisplayFor(modelItem => Model.salarioEmpleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.telefonoEmpleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.cargoEmpleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.estatusEmpleado)
                        </td>
                        <td>
                            <!-- Button trigger modal -->

                            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModalLong-@Model.idEmpleado">
                                Info. general
                            </button>

                            <!-- popup content -->
                            <div class="modal fade" id="exampleModalLong-@Model.idEmpleado" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle1" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle1">Información empleado</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>

                                        <div class="modal-body">
                                            <table class="table table-bordered">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th scope="col" colspan="2" style="text-align:center;">@Html.DisplayFor(modelItem => Model.nombreEmpleado) @Html.DisplayFor(modelItem => Model.apellidoEmpleado) - ID: @Html.DisplayFor(modelItem => Model.idEmpleado)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>Cedula</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.cedulaEmpleado)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Fecha nacimiento</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.fechaNacimientoEmpleado)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Sexo</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.sexoEmpleado)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Direccion</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.direccionEmpleado)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Telefono</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.telefonoEmpleado)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Usuario</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.usuarioEmpleado)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Cargo</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.cargoEmpleado)</th>
                                                    </tr>

                                                    <tr>
                                                        <td>Salario</td>
                                                        <th>RD$@Html.DisplayFor(modelItem => Model.salarioEmpleado)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Cuenta Bancaria</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.numeroCuentaEmpleado)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Fecha registro</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.fechaRegistroEmpleado)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Estatus</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.estatusEmpleado)</th>
                                                    </tr>


                                                </tbody>
                                            </table>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                                            <button type="button" class="btn btn-warning"><a asp-controller="Usuarios" asp-action="EditarEmpleado" asp-route-id="@Model.idEmpleado">Editar</a></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--// popup content -->
                            <!--// Scrolling long content Modal -->

                            <button class="btn btn-warning btn-sm">
                                <a asp-controller="Usuarios" asp-action="EditarEmpleado" asp-route-id="@Model.idEmpleado">Editar</a>
                            </button>
                            <button class="btn btn-danger btn-sm ">
                                <a asp-controller="Usuarios" asp-action="EliminarEmpleado" asp-route-id="@Model.idEmpleado">Eliminar</a>
                            </button>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>

    </div>
</div>

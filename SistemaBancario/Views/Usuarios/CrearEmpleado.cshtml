
@{
    ViewData["Title"] = "CrearEmpleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="wrapper">
        <partial name="_MenuLateral" />
            <div id="content">
                <!-- Forms-3 -->
                <div class="outer-w3-agile mt-3">
                    <h4 class="tittle-w3-agileits mb-4">Crear usuario empleado</h4>

                    <div class="containerBody">
                        <h4 class="mb-3">Información General</h4>
                        <form action="#" method="post">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Nombre</label>
                                    <input type="text" class="form-control" id="Nombre" placeholder="Nombre" required="">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputapellido">Apellido</label>
                                    <input type="text" class="form-control" id="Aoellido" placeholder="Apellido" required="">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputapellido">Cedula</label>
                                    <input type="text" class="form-control" id="Cedula" placeholder="Cedula" required="">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Dare">Fecha de nacimiento</label>
                                    <input type="date" class="form-control" id="fechaNacimiento" placeholder="" required="">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="Sexo">Sexo</label>
                                    <select type="text" class="form-control custom-select" id="Sexo" placeholder="Sexo" required="">
                                        <option value="">Sexo...</option>
                                        <option>Masculino</option>
                                        <option>Femenino</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputAddress">Direccion</label>
                                    <input type="text" class="form-control" id="Direccion" placeholder="Direccion" required="">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Tel">Telefono</label>
                                    <input type="text" class="form-control" id="Telefono" placeholder="Telefono" required="">
                                </div>
                            </div>

                            <hr class="mb-3" />
                            <h4 class="mb-3">Información de cuenta</h4>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="User">Usuario</label>
                                    <input type="text" class="form-control" id="Usuario" placeholder="Usuario" required="">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Password">Contraseña</label>
                                    <input type="password" class="form-control" id="Contrasena" placeholder="Contraseña" required="">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="Salario">Salario</label>
                                    <input type="text" class="form-control" id="Salario" placeholder="Salario" required="">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Cuenta">No. Cuenta bancaria</label>
                                    <input type="text" class="form-control" id="NumeroCuenta" placeholder="Número de cuenta" required="">
                                </div>
                            </div>
                            <div class="form-row">
                                
                                <div class="form-group col-md-6">
                                    <label for="Cargo">Cargo</label>
                                    <input type="text" class="form-control" id="Cargo" placeholder="Cargo" required="">
                                </div>
                            </div>

                            <hr class="mb-3" />
                            <button type="submit" class="btn btn-primary">Crear empleado</button>
                        </form>


                    </div>
                    </div>
                    <!--// Forms-3 -->


                </div>
        </div>


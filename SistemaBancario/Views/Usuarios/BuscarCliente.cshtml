@model SistemaBancario.Models.ListadoUsuarios
@{
    ViewData["Title"] = "BuscarCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="wrapper">
    <partial name="_MenuLateral" />
    <div id="content">

        <!-- top-bar -->
        <nav class="navbar dnavbar navbar-default mb-xl-5 mb-4">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" id="sidebarCollapse" class="btn btn-info navbar-btn">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
                <form action="BuscarCliente" method="post" class="form-inline mx-auto search-form">

                    <!-- Search-from -->
                    <div class="form-row">
                        <div class="form-group m-1">
                            <label>Buscar cliente por</label>
                        </div>
                        <div class="form-group m-1">
                            <input type="text" class="form-control" name="cedula" placeholder="Cedula" required="">
                        </div>
                        <div class="form-group m-1">
                            <button type="submit" class="btn btn-warning">Buscar</button>
                        </div>


                    </div>
                </form>
                <div class="form-group m-1">
                    <button type="submit" class="btn btn-primary"><a asp-controller="Usuarios" asp-action="ListadoClientes">Volver a listado</a></button>
                </div>
                <!--// Search-from -->
            </div>
        </nav>
        <!--// top-bar -->
       

        <script>
            $(document).ready(function () {
                $('#sidebarCollapse').on('click', function () {
                    $('#sidebar').toggleClass('active');
                });
            });
        </script>

        <!-- table4 -->
        <div class="outer-w3-agile mt-3">
            <h4 class="tittle-w3-agileits mb-4">Listado de clientes</h4>
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Cedula</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Salario</th>
                        <th scope="col">Cuenta Bancaria</th>
                        <th scope="col">Fecha Registro</th>
                        <th scope="col">Estatus</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.idCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.cedulaCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.nombreCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.apellidoCliente)
                        </td>

                        <td>
                            RD$@Html.DisplayFor(modelItem => Model.salarioCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.numeroCuentaCliente)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => Model.fechaRegistroCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.estatusCliente)
                        </td>
                        <td>

                            <!-- Button trigger modal -->

                            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModalLong-@Model.idCliente">
                                Info. general
                            </button>

                            <!-- popup content -->
                            <div class="modal fade" id="exampleModalLong-@Model.idCliente" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle1" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle1">Información cliente</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>

                                        <div class="modal-body">
                                            <table class="table table-bordered">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th scope="col" colspan="2" style="text-align:center;">@Html.DisplayFor(modelItem => Model.nombreCliente) @Html.DisplayFor(modelItem => Model.apellidoCliente) - ID: @Html.DisplayFor(modelItem => Model.idCliente)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>Cedula</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.cedulaCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Fecha nacimiento</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.fechaNacimientoCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Sexo</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.sexoCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Direccion</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.direccionCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Telefono</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.telefonoCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Usuario</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.usuarioCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Salario</td>
                                                        <th>RD$@Html.DisplayFor(modelItem => Model.salarioCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Descuento mensual para ahorro</td>
                                                        <th>RD$@Html.DisplayFor(modelItem => Model.ahorroCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Cuenta Bancaria</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.numeroCuentaCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Fecha registro</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.fechaRegistroCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Estatus</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.estatusCliente)</th>
                                                    </tr>

                                                </tbody>
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th colspan="2">
                                                            Información de Familiar
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>Nombre</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.nombreFamiliarCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Apellido</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.apellidoFamiliarCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Cedula</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.cedulaFamiliarCliente)</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Parentesco</td>
                                                        <th>@Html.DisplayFor(modelItem => Model.parentescoCliente)</th>
                                                    </tr>
                                                </tbody>
                                            </table>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                                            <button type="button" class="btn btn-warning"> <a asp-controller="Usuarios" asp-action="EditarCliente" asp-route-id="@Model.idCliente">Editar</a></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--// popup content -->
                            <!--// Scrolling long content Modal -->

                            <button class="btn btn-warning btn-sm">
                                <a asp-controller="Usuarios" asp-action="EditarCliente" asp-route-id="@Model.idCliente">Editar</a>
                            </button>
                            <button class="btn btn-danger btn-sm ">
                                <a asp-controller="Usuarios" asp-action="EliminarCliente" asp-route-id="@Model.idCliente">Eliminar</a>
                            </button>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!--// table4 -->

    </div>
</div>



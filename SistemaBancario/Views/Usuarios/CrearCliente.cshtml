
@{
    ViewData["Title"] = "CrearCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper">
    <partial name="_MenuLateral" />
    <div id="content">
        <!-- Forms-3 -->
        <div class="outer-w3-agile mt-3">
            <h4 class="tittle-w3-agileits mb-4">Crear usuario Cliente</h4>

            <div class="containerBody">
                <h4 class="mb-3">Información General</h4>
                <form action="CrearUsuario" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputNombre">Nombre</label>
                            <input pattern="(?=.*[A-Z]).{1,}" title="Primera letra en mayúscula." type="text" class="form-control" name="nombreCliente" placeholder="Nombre" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputapellido">Apellido</label>
                            <input pattern="(?=.*[A-Z]).{1,}" title="Primera letra en mayúscula." type="text" class="form-control" name="apellidoCliente" placeholder="Apellido" required="">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inpuCedula">Cedula</label>
                            <input pattern="\d*" title="Debe ingresar los números de la cedula sin guiones." type="text" minlength="11" maxlength="11" class="form-control" name="cedulaCliente" placeholder="Cedula" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Dare">Fecha de nacimiento</label>
                            <input type="date" pattern="\d*" title="Debe ser mayor de edad." max="2002-03-31" class="form-control" name="fechaNacimientoCliente" placeholder="" required="">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Sexo">Sexo</label>
                            <select type="text" class="form-control custom-select" name="sexoCliente" placeholder="Sexo" required="">
                                <option value="">Sexo...</option>
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputAddress">Direccion</label>
                            <input type="text" class="form-control" name="direccionCliente" placeholder="Direccion" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Tel">Telefono</label>
                            <input type="text" pattern="\d*" title="Debe ingresar los números de teléfono sin guiones." minlength="10" maxlength="10" class="form-control" name="telefonoCliente" placeholder="Telefono" required="">
                        </div>
                    </div>

                    <hr class="mb-3" />
                    <h4 class="mb-3">Información de cuenta</h4>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="User">Usuario</label>
                            <input type="text" class="form-control" name="usuarioCliente" placeholder="Usuario" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Password">Contraseña</label>
                            <input pattern=".{6,}" title="Debe contener mas de 6 caracteres." type="password" class="form-control" name="contrasenaCliente" placeholder="Contraseña" required="">
                        </div>
                    </div>
                    <div class="form-row">

                        <div class="form-group col-md-6">
                            <label for="Salario">Salario</label>
                            <input type="number" class="form-control" name="salarioCliente" placeholder="Salario" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Cuenta">No. Cuenta bancaria</label>
                            <input type="number" class="form-control" name="numeroCuentaCliente" placeholder="Número de cuenta" required="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Ahorro">Ahorro </label>
                            <small>
                                (El monto minimo de este ahorro es de RD$200.00) <br />
                                Autorizo al ITLA a descontar de mi salario esta cantidad por concepto de
                                AHORRO.
                            </small>
                            <input type="number" min="200" class="form-control" name="ahorroCliente" placeholder="200" required="">
                        </div>
                    </div>

                    <hr class="mb-3" />
                    <h4 class="mb-1">Información familiar</h4>
                    <h6 class="mb-3">Deseo que en caso de fallecimiento, mis ahorros sean pagados a:</h6>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Nombre</label>
                            <input pattern="(?=.*[A-Z]).{1,}" title="Primera letra en mayúscula." type="text" class="form-control" name="nombreFamiliarCliente" placeholder="Nombre" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputapellido">Apellido</label>
                            <input pattern="(?=.*[A-Z]).{1,}" title="Primera letra en mayúscula." type="text" class="form-control" name="apellidoFamiliarCliente" placeholder="Apellido" required="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Cedula</label>
                            <input pattern="\d*" title="Debe ingresar los números de la cedula sin guiones." type="text" minlength="11" maxlength="11" class="form-control" name="cedulaFamiliarCliente" placeholder="Cedula" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Parentesco">Parentesco</label>
                            <select type="text" class="form-control custom-select" name="parentescoCliente" placeholder="Parentesco" required="">
                                <option value="">Parentesco...</option>
                                <option value="Padre">Padre</option>
                                <option value="Madre">Madre</option>
                                <option value="Hijo">Hijo</option>
                                <option value="Hija">Hija</option>
                                <option value="Hermano">Hermano</option>
                                <option value="Hermana">Hermana</option>
                                <option value="Esposo">Esposo</option>
                                <option value="Esposa">Esposa</option>
                            </select>
                        </div>
                    </div>

                    <hr class="mb-3" />
                    <button type="submit" class="btn btn-primary">Crear cliente</button>
                </form>
            </div>
        </div>
        <!--// Forms-3 -->
    </div>
</div>





@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <head>
        <link href="~/css/Login.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    </head>

<!-- content -->
<div class="container-agille">
    <div class="formBox level-login">
        <div class="box loginBox">
            <h3>Cliente</h3>
            <form class="form" action="#" method="post">
                <div class="f_row-2">
                    <input type="text" class="input-field" placeholder="Usuario" name="user" required>
                </div>
                <div class="f_row-2 last">
                    <input type="password" class="input-field" placeholder="Contraseña" name="password" required>
                </div>
                <input class="submit-w3" type="submit" value="Login">
            </form>
        </div>
        <div class="box registerBox wthree">
            <span class="reg_bg"></span>
            <h3>Empleado</h3>
            <form class="form" action="#" method="post">
                <div class="f_row-2">
                    <input type="text" class="input-field" placeholder="Usuario" name="user" required>
                </div>
                <div class="f_row-2 last">
                    <input type="password" class="input-field" placeholder="Contraseña" name="password" required>
                </div>
                <input class="submit-w3" type="submit" value="Login">
            </form>
        </div>
        <a href="#" class="regTag icon-add">
            <i class="fas fa-exchange-alt"></i>
        </a>
    </div>
</div>
<!-- //content -->

<script src="~/js/jquery-2.2.3.min.js"></script>
<script src="~/js/input-field.js"></script>
@model IEnumerable<SistemaBancario.Models.ListaPagos>
@{
    ViewData["Title"] = "Pagos";
}

<head>
    <link href="~/css/dashboard.css" rel="stylesheet" />
</head>
<div class="wrapper">
    <partial name="_MenuLateral" />
    <div id="content">
        <partial name="_BarraBusqueda" />
        <section class="tables-section">
            <!-- Pagos Pagados -->
            <div class="outer-w3-agile mt-3">
                <h4 class="tittle-w3-agileits mb-4">Lista de solicitudes de préstamo aprobados</h4>
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" style="text-align:center;">ID</th>
                            <th scope="col" style="text-align:center;">Prestamo</th>
                            <th scope="col" style="text-align:center;">Cliente</th>
                            <th scope="col" style="text-align:center;">Monto</th>
                            <th scope="col" style="text-align:center;">Fecha de Pago</th>
                            <th scope="col" style="text-align:center;">Estado</th>
                            <th scope="col" style="text-align:center;">Restante a Saldar</th>
                            <th scope="col" style="text-align:center;">Cuotas Pendientes</th>
                            <th scope="col" style="text-align:center;">Cuotas Saldadas</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var solRech in Model)
                        {
                        <tr>
                            <th scope="row">@Html.DisplayFor(modelItem => solRech.ID_Pago)</th>
                            <td>@Html.DisplayFor(modelItem => solRech.FK_ID_Prestamos)</td>
                            <td>@Html.DisplayFor(modelItem => solRech.FK_ID_Cliente)</td>
                            <td>@Html.DisplayFor(modelItem => solRech.Monto)</td>
                            <td>@Html.DisplayFor(modelItem => solRech.FechaPago)</td>
                            <td>@Html.DisplayFor(modelItem => solRech.Estado)</td>
                            <td>@Html.DisplayFor(modelItem => solRech.Restante)</td>
                            <td>@Html.DisplayFor(modelItem => solRech.CuotasCubiertas)</td>
                            <td>@Html.DisplayFor(modelItem => solRech.CuotasFaltantes)</td>
                            <td>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary" style="margin-left:auto;margin-right:auto;" data-toggle="modal" data-target="#exampleModal">
                                    Detalles
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel"></h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">

                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="inputEmail4">Nombre del solicitante</label>
                                                        <input type="text" class="form-control" id="inputEmail4" value="@Html.DisplayFor(modelItem => solRech.ID_Pago)">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="inputPassword4">Cedula</label>
                                                        <input type="text" class="form-control" id="inputPassword4" value="@Html.DisplayFor(modelItem => solRech.FK_ID_Prestamos)">
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-md-3">
                                                        <label for="inputEmail4">Monto</label>
                                                        <input type="text" class="form-control" id="inputEmail4" value="@Html.DisplayFor(modelItem => solRech.FK_ID_Cliente)">
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <label for="inputPassword4">Tipo de préstamo</label>
                                                        <input type="text" class="form-control" id="inputPassword4" value="@Html.DisplayFor(modelItem => solRech.Monto)">
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <label for="inputPassword4">Fecha de solicitud</label>
                                                        <input type="text" class="form-control" id="inputPassword4" value="@Html.DisplayFor(modelItem => solRech.FechaPago)">
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <label for="inputPassword4">Fecha de aprobación</label>
                                                        <input type="text" class="form-control" id="inputPassword4" value="@Html.DisplayFor(modelItem => solRech.CuotasCubiertas)">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputAddress">Detalles de la solicitud</label>
                                                    <textarea type="text" class="form-control" id="inputAddress" rows="5">@Html.DisplayFor(modelItem => solRech.CuotasFaltantes)</textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--// prestamos aprobados -->
        </section>
    </div>
</div>
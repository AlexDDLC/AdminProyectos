@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoopITLA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="sweetalert2.all.min.js"></script>
    <!-- Optional: include a polyfill for ES6 Promises for IE11 -->
    <script src="https://cdn.jsdelivr.net/npm/promise-polyfill"></script>
</head>
<body>
        <div class="cabecera">
            <div class="loguero"><img class="logo" src="images/logo.png" alt=""></div>
            <div class="coop">COOPERATIVA INSTITUTO TECNOLOGICO DE LAS AMERICAS</div>
            <div class="cabeceraTrio">
                <div><img class="escudo" src="images/escudo-RD.png"></div>
                <div> <input type="text" id="buscador" placeholder="Buscar..."></div>
                <div class="menu2">
                    <ul>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">INCIO</a></li> |
                        <li><a href="#">MAPA DE SITIO</a></li> |
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contactanos">CONTACTOS</a></li>
                    </ul>
                </div>
            </div>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CoopITLA</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Nosotros"><i class="fas fa-users"></i> Sobre nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Servicios"><i class="fas fa-handshake"></i> Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Contactanos"><i class="fas fa-mail-bulk"></i> Contáctanos</a>
                        </li>
                        @if (@httpContextAccessor.HttpContext.Session.GetString("Usuario") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Dashboard"><i class="fas fa-chart-line"></i> Dashboard</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div style="height:10px; background-color:#1a75bb; width:100%"></div>
    <footer class="border-top footer text-muted">

        <div class="container">

            <div><img class="logoFooterRD" src="images/DUAL LOGO.png" alt=""></div>
            <div>
                <b>Cooperativa Instituto Tecnológico de Las Américas COOP-ITLA</b> <br>
                Autopista Las Américas, Km. 27, PCSD, La Caleta, Boca Chica 11606.<br>
                809-738-4852  info@itla.edu.do<br>
                TÉRMINOS DE USO | POLÍTICAS DE PRIVACIDAD | PREGUNTAS FRECUENTES<br>
                © 2020 TODOS LOS DERECHOS RESERVADOS
            </div>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

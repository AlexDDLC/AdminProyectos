
@{
    ViewData["Title"] = "Contactanos";
}


<head>
    <link href="~/css/contacto-nosotros.css" rel="stylesheet" />
</head>


<div class="paddingLR">
    <img class="cover2" src="~/Account/images/cover2.PNG" />
    <div>
        <p class="index mt-3"><a asp-controller="Home" asp-action="Index">Inicio </a>/ @ViewData["Title"] </p>
    </div>
</div>

<div class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Contáctanos</h5>
                            <p class="mt-3 mb-4">
                                Estamos dispoinibles de 8am-12pm y 1pm-5pm de lunes a viernes vía telefónica y 
                                24/7 vía fax y/o correo electrónico.
                               
                            </p>
                            <h6 class="mb-4">
                                Para cualquier información sientete libre de contactarnos, nuestras líneas estan abiertas
                                para ti.
                                
                            </h6>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4"><i class="far fa-envelope"></i> Correo:</h6>
                            <p>
                                <a href="mailto:info@itla.edu.do">
                                    info@itla.edu.do
                                </a>
                            </p>
                            <h6 class="mt-4"><i class="fas fa-map-marker-alt"></i> Dirección</h6>
                            <p> Autopista Las Américas, Km. 27, PCSD, La Caleta, Boca Chica</p>
                            <h6 class="mt-4"><i class="fas fa-phone"></i> Llámanos al:</h6>
                            <p class="margin-top">
                                <a href="tel:809-738-4852">
                                    809-738-4852
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form action="https://sendmail.w3layouts.com/submitForm" method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" name="w3lName" id="w3lName" placeholder="Nombre" class="contact-input" />
                            </div>
                            <div class="form-group">
                                <input type="email" id="w3lSender" placeholder="Correo" class="contact-input" required="" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="w3lSubect" id="w3lSubect" placeholder="Asunto" class="contact-input" />
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea name="Mensaje" id="w3lMessage" placeholder="Escribe tu mensaje aquí" required=""></textarea>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-primary btn-style">Enviar mensaje</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="map">
                <h5>Nuestra ubicación</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3784.713417262691!2d-69.66484998545755!3d18.451316676105133!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8eaf7ff3f1653e37%3A0xc80c36909a523777!2sInstituto%20Tecnol%C3%B3gico%20de%20Las%20Am%C3%A9ricas%20(ITLA)!5e0!3m2!1ses-419!2sdo!4v1584664687496!5m2!1ses-419!2sdo"
                        width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false"
                        tabindex="0"></iframe>
            </div>
        </div>
        <div class="w3l-footer">
            <div class="footer-29">
                <div class="container">
                    <div class="row footer-top-29">
                        <div class="col-md-6 footer-list-29 footer-1 mt-md-4">
                            <h6 class="footer-title-29">Síguenos en nuestras redes </h6>
                            <div class="main-social-footer-29">
                                <a href="https://www.facebook.com/ITLARD/" class="facebook"><i class="fab fa-facebook-f"></i></a>
                                <a href="https://twitter.com/ITLARD" class="twitter"><i class="fab fa-twitter"></i></a>
                                <a href="https://www.instagram.com/itlard/" class="instagram"><i class="fab fa-instagram"></i></a>
                                <a href="https://youtube.com/user/itlavirtual/" class="google-plus"><i class="fab fa-youtube"></i></a>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Contactanos";
}

<head>
    <link href="~/css/contacto-nosotros.css" rel="stylesheet" />
</head>
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Contáctanos</h5>
                            <p class="mt-3 mb-4">
                                Hi there, We are available 24/7 by fax, e-mail or by phone. Drop us line so we can
                                talk
                                futher about that.
                            </p>
                            <h6 class="mb-4">
                                For more info or inquiry about our products project, and pricing please feel free to
                                get in touch with us.
                            </h6>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4"><i class="far fa-envelope"></i> Correo:</h6>
                            <p>
                                <a href="mailto:info@example.com">
                                    info@example.com
                                </a>
                            </p>
                            <h6 class="mt-4"><i class="fas fa-map-marker-alt"></i> Dirección</h6>
                            <p> 433 California St, Suite 300 San Francisco, CA 94104, USA</p>
                            <h6 class="mt-4"><i class="fas fa-phone"></i> Llámanos al:</h6>
                            <p class="margin-top">
                                <a href="tel:+(21) 255 999 8899">
                                    +(21)
                                    255 999 8899
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form action="https://sendmail.w3layouts.com/submitForm" method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" name="w3lName" id="w3lName" placeholder="Nombre" class="contact-input" />
                            </div>
                            <div class="form-group">
                                <input type="email" id="w3lSender" placeholder="Correo" class="contact-input" required="" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="w3lSubect" id="w3lSubect" placeholder="Asunto" class="contact-input" />
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea name="Mensaje" id="w3lMessage" placeholder="Escribe tu mensaje aquí" required=""></textarea>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-primary btn-style">Enviar mensaje</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="map">
                <h5>Nuestra ubicación</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387145.86654334463!2d-74.25818682528057!3d40.70531100753592!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1sen!2sin!4v1493028309728"
                        style="border:0" allowfullscreen=""></iframe>
            </div>
        </div>
    </div>
</section>
<!-- /contact-form -->
<!-- footer -->
<footer class="w3l-footer">
    <div class="container pb-lg-3">
        <h6 class="footer-title-29">Síguenos en nuestras redes</h6>
        <div class="main-social-footer-29">
            <a href="#facebook" class="facebook"><span class="fa fa-facebook"></span></a>
            <a href="#twitter" class="twitter"><span class="fa fa-twitter"></span></a>
            <a href="#instagram" class="instagram"><i class="fab fa-instagram"></i></a>
            <a href="#google-plus" class="google-plus"><i class="fab fa-google-plus-g"></i></a>
            <a href="#linkedin" class="linkedin"><span class="fa fa-linkedin"></span></a>
        </div>
    </div>
</footer>
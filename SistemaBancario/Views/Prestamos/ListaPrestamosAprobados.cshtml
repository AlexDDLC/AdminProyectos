@model IEnumerable<SistemaBancario.Models.ListarSolicitudesPrestamo>
@{
    ViewData["Title"] = "Préstamos";
}

<head>
    <link href="~/css/dashboard.css" rel="stylesheet" />
</head>
<div class="wrapper">
    <partial name="_MenuLateral" />
    <div id="content">
        <partial name="_BarraBusqueda" />
        <section class="tables-section">
            <!-- prestamos aprobados -->
            <div class="outer-w3-agile mt-3">
                <h4 class="tittle-w3-agileits mb-4">Lista de solicitudes de préstamo aprobados</h4>
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" style="text-align:center;">ID</th>
                            <th scope="col" style="text-align:center;">Solicitante</th>
                            <th scope="col" style="text-align:center;">Cedula</th>
                            <th scope="col" style="text-align:center;">Monto</th>
                            <th scope="col" style="text-align:center;">Tipo</th>
                            <th scope="col" style="text-align:center;">Fecha solicitud</th>
                            <th scope="col" style="text-align:center;">Fecha aprobación</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var solRech in Model)
                        {
                            <tr>
                                <th scope="row">@Html.DisplayFor(modelItem => solRech.id_sol)</th>
                                <td>@Html.DisplayFor(modelItem => solRech.solicitante)</td>
                                <td>@Html.DisplayFor(modelItem => solRech.cedula)</td>
                                <td>@Html.DisplayFor(modelItem => solRech.monto)</td>
                                <td>@Html.DisplayFor(modelItem => solRech.tipo)</td>
                                <td>@Html.DisplayFor(modelItem => solRech.fechasolicitud)</td>
                                <td>@Html.DisplayFor(modelItem => solRech.fechaRehazo)</td>
                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" style="margin-left:auto;margin-right:auto;" 
                                            data-toggle="modal" data-target="#exampleModal-@solRech.id_sol">
                                        Detalles
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal-@solRech.id_sol" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Detalles de la solicitud</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">

                                                    <div class="form-row">
                                                        <div class="form-group col-md-6">
                                                            <label for="inputEmail4">Nombre del solicitante</label>
                                                            <input type="text" class="form-control" id="inputEmail4" value="@Html.DisplayFor(modelItem => solRech.solicitante)">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label for="inputPassword4">Cedula</label>
                                                            <input type="text" class="form-control" id="inputPassword4" value="@Html.DisplayFor(modelItem => solRech.cedula)">
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="form-group col-md-3">
                                                            <label for="inputEmail4">Monto</label>
                                                            <input type="text" class="form-control" id="inputEmail4" value="@Html.DisplayFor(modelItem => solRech.monto)">
                                                        </div>
                                                        <div class="form-group col-md-3">
                                                            <label for="inputPassword4">Tipo de préstamo</label>
                                                            <input type="text" class="form-control" id="inputPassword4" value="@Html.DisplayFor(modelItem => solRech.tipo)">
                                                        </div>
                                                        <div class="form-group col-md-3">
                                                            <label for="inputPassword4">Fecha de solicitud</label>
                                                            <input type="text" class="form-control" id="inputPassword4" value="@Html.DisplayFor(modelItem => solRech.fechasolicitud)">
                                                        </div>
                                                        <div class="form-group col-md-3">
                                                            <label for="inputPassword4">Fecha de aprobación</label>
                                                            <input type="text" class="form-control" id="inputPassword4" value="@Html.DisplayFor(modelItem => solRech.fechaRehazo)">
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="form-group col-md-3">
                                                            <label for="inputEmail4">Cuotas</label>
                                                            <input type="text" class="form-control" id="inputEmail4" value="@Html.DisplayFor(modelItem => solRech.cuotas)">
                                                        </div>
                                                        <div class="form-group col-md-3">
                                                            <label for="inputPassword4">Tasa de interés</label>
                                                            <input type="text" class="form-control" id="inputPassword4" value="@Html.DisplayFor(modelItem => solRech.tasaInteres)">
                                                        </div>
                                                        <div class="form-group col-md-3">
                                                            <label for="inputPassword4">Cuotas mencuales</label>
                                                            <input type="text" class="form-control" id="inputPassword4" value="@Html.DisplayFor(modelItem => solRech.cuotaMensual)">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="inputAddress">Detalles de la solicitud</label>
                                                        <textarea type="text" class="form-control" id="inputAddress" rows="5">@Html.DisplayFor(modelItem => solRech.detalles)</textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--// prestamos aprobados -->
        </section>
    </div>
</div>